<% if @song.errors.any? %>
<% @song.errors.full_messages.each do |msg| %>
<%= msg %>
<% end %>
<% end %>

<%= form_for @song do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :released %>
<%= f.radio_button :released, "true" %>
<%= f.radio_button :released, "false" %>

<%= f.label :release_year %>
<%= f.text_field :release_year %>

<%= f.label :artist_name %>
<%= f.text_field :artist_name %>

<%= f.label :genre %>
<%= f.text_field :genre %>

<%= f.submit %>
<% end %>